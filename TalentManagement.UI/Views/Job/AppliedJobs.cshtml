@{
    ViewData["Title"] = "Applied Jobs";

}

<div class="container-xxl py-5">
    <div class="container">
        <h1 class="text-center mb-5 wow fadeInUp" data-wow-delay="0.1s">You Applied To</h1>
        <div id="tab-1" class="tab-pane fade show p-0 active">

            @foreach (var item in Model)
            {
                <div class="job-item p-4 mb-4">
                    <div class="row g-4">

                        <div class="col-sm-12 col-md-8 d-flex align-items-center">

                            <div class="text-start ps-4">
                                <h5 class="mb-3">
                                    @item.Job.JobTitle.Substring(0, (item.Job.JobTitle.Length > 20 ? 20 : item.Job.JobTitle.Length))

                                </h5>
                                <p class="my-2">
                                    @item.Job.JobType  &nbsp; &nbsp; &nbsp;      @item.Job.Company.CompanyEmail

                                </p>
                                <p>
                                    <a href="/Job/Details/@item.Job.Id" class="genric-btn success">Applied</a>
                                </p>


                            </div>
                        </div>
                        <div class="col-sm-12 col-md-4 d-flex flex-column align-items-start align-items-md-end justify-content-center">
                            <div class="d-flex mb-3">

                                <a class="btn btn-primary" asp-controller="Job" asp-action="Detail" asp-route-id="@item.Job.Id">Details</a>


                            </div>



                        </div>

                    </div>
                </div>
            }
        </div>
    </div>
</div>













