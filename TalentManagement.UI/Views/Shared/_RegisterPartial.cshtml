@model TalentManagement.UI.Models.Identity.RegisterViewModel
<form asp-controller="Account" asp-action="Register" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="FullName"></label>

        <input asp-for="FullName" class="form-control" id="validationDefault01" placeholder="" required="">
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" id="validationDefault02" placeholder="" required="">
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Password" class="mb-2"></label>
        <input asp-for="Password" class="form-control" id="password1" placeholder="" required="">
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ConfirmPassword"></label>
        <input asp-for="ConfirmPassword" class="form-control" id="password2" placeholder="" required="">
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary submit mb-4">Register</button>
    <p class="text-center pb-4">
        <a href="#">By clicking Register, I agree to your terms</a>
    </p>
   @* <p class="text-center pb-4">
        <a asp-controller="Account" asp-action="Login" data-toggle="modal2" data-target="#exampleModalCenter"> Already have an account?</a>
    </p>*@
</form>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}