@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
@{
    ViewData["Title"] = "index";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}
<br />
<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center mb-5 wow fadeInUp" data-wow-delay="0.1s">
            <div class="row">
                <h2 class="d-flex justify-content-center">Roles</h2>
                <div class="row d-flex justify-content-center">

                    <div class="col-12 text-right d-flex justify-content-end mb-2">
                        <a asp-action="Upsert" asp-controller="Roles" class="btn btn-primary">Create New Role</a>
                    </div>
                </div>

                <div class="p-4 border rounded">
                    @if (Model.Any())
                    {
                        <table class="table table-striped border">
                            <tr class="table-secondary">
                                <th>Id</th>
                                <th>Name</th>

                                <th>

                                </th>
                            </tr>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @item.Id
                                    </td>
                                    <td>
                                        @item.Name
                                    </td>

                                    <td>
                                        <div class="text-center">
                                            <form asp-action="Delete" asp-route-id="@item.Id">
                                                <a asp-action="Upsert" asp-route-id="@item.Id" class="btn btn btn-outline-dark" style="cursor:pointer">Edit</a>

                                                <button type="submit" onclick="return confirm(" Are you sure you want to delete this?")"
                                                        class="btn btn-outline-danger ">
                                                    Delete
                                                </button>
                                            </form>
                                        </div>
                                    </td>

                                </tr>
                            }
                        </table>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
