@model TalentManagement.UI.Models.ViewModels.CreateTalentViewModel
@using TalentManagement.Domain.Enum;
@{
    ViewData["Title"] = "UpdateTalent";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}
<div class="container  d-flex align-items-center justify-content-center">
    <div class="single">
        <h2>Update Your Information</h2>
        <br/>
        <div class="form-container">

            <form asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="form-group col-md-12">
                        <label class="col-md-3 control-lable" asp-for="FirstName"></label>
                        <div class="col-md-9">
                            <input asp-for="FirstName" path="firstName" id="firstName" class="form-control input-sm" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                    </div>

                </div>
                <div class="row">
                    <div class="form-group col-md-12">
                        <label class="col-md-3 control-lable" asp-for="LastName"></label>
                        <div class="col-md-9">
                            <input asp-for="LastName" path="firstName" id="lastName" class="form-control input-sm" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>

                </div>
                <div class="row">
                    <div class="form-group col-md-12">
                        <label class="col-md-3 control-lable" asp-for="Gender"></label>
                        <div class="col-md-9">
                            <select asp-for="Gender" class="form-control input-sm" asp-items="Html.GetEnumSelectList<Gender>()">
                                <option value="" selected disabled>---Select Your Gender---</option>
                            </select>
                            <span asp-validation-for="Gender" class="text-danger"></span>
                        </div>
                    </div>

                </div>
                <div class="row">
                    <div class="form-group col-md-12">
                        <label class="col-md-3 control-lable" asp-for="Language"></label>
                        <div class="col-md-9">
                            <select asp-for="Language" class="form-control input-sm" asp-items="Html.GetEnumSelectList<Language>()">
                                <option value="" selected disabled>---Select Language Proficency---</option>
                            </select>

                            <span asp-validation-for="Language" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-12">
                        <label class="col-md-3 control-lable" asp-for="Email"></label>
                        <div class="col-md-9">
                            <input asp-for="Email" path="dob" id="dob" class="form-control input-sm" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>

                </div>
                <div class="row">
                    <div class="form-group col-md-12">
                        <label class="col-md-3 control-lable" asp-for="PhoneNo"></label>
                        <div class="col-md-9">
                            <input asp-for="PhoneNo" path="email" id="email" class="form-control input-sm" />
                            <span asp-validation-for="PhoneNo" class="text-danger"></span>
                        </div>
                    </div>

                </div>
                <div class="row">
                    <div class="form-group col-md-12">
                        <label class="col-md-3 control-lable" asp-for="Country"></label>
                        <div class="col-md-9">
                            <select asp-for="Country" path="country" id="country" class="form-control input-sm" asp-items="Html.GetEnumSelectList<Country>()">
                                <option value="" selected disabled>---Select Your Country---</option>
                            </select>
                            <span asp-validation-for="Country" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group col-md-12" style="margin-top:5px;display:inline;">
                        <label class="col-md-3 control-lable" asp-for="SelectedSkills"></label>
                        <div class="col-md-9 col-xs-9" style="margin-left:5px; ">
                            @*  <select name="SelectedSKills" class="form-control input-sm" asp-items="Model.Skills" multiple="multiple"></select>*@
                            @Html.ListBoxFor(model => model.SelectedSkills, new MultiSelectList(Model.Skills, "Value", "Text"), new { @class = "form-control input-sm", style = "width: 100%", multiple = "multiple", id = "Skills_dropdown"})

                            <span asp-validation-for="SelectedSkills" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-12">
                        <label class="col-md-3 control-lable" asp-for="SelectedEducation"></label>
                        <div class="col-md-9">
                            @Html.ListBoxFor(model => model.SelectedEducation, new MultiSelectList(Model.EducationLevels, "Value", "Text"), new { @class = "form-control input-sm", style = "width: 100%", multiple = "multiple", id = "Educations_dropdown"})
                            <span asp-validation-for="SelectedEducation" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <h3>Previous Work Experience</h3>
                <br />


                <table id='ExpTable' class="table ">
                    <thead>
                        <tr>
                            <th>
                                Company Name
                            </th>
                            <th>
                                Role
                            </th>
                            <th>
                                Number Of Years
                            </th>
                            <th>
                                Company Email Address

                            </th>
                            <th>
                            </th>
                        </tr>
                    </thead>
                    <tbody>

                        @for (int i = 0; i < Model.TalentExperiences.Count; i++)
                        {
                            <tr>
                                <td>

                                    @Html.EditorFor(x=>x.TalentExperiences[i].CompanyName, new {htmlAttributes=new {@class="form-control"}})
                                    @Html.ValidationMessageFor(x=>x.TalentExperiences[i].CompanyName, "", new { @class = "text-danger" })
                                </td>
                                <td>

                                    @Html.EditorFor(x=>x.TalentExperiences[i].Role, new {htmlAttributes=new {@class="form-control"}})
                                    @Html.ValidationMessageFor(x=>x.TalentExperiences[i].Role, "", new { @class = "text-danger" })
                                </td>
                                <td>

                                    @Html.EditorFor(x=>x.TalentExperiences[i].NumberOfYears, new {htmlAttributes=new {@class="form-control"}})
                                    @Html.ValidationMessageFor(x=>x.TalentExperiences[i].NumberOfYears, "", new { @class = "text-danger" })
                                </td>
                                <td>

                                    @Html.EditorFor(x=>x.TalentExperiences[i].CompanyEmailAddress, new {htmlAttributes=new {@class="form-control"}})
                                    @Html.ValidationMessageFor(x=>x.TalentExperiences[i].CompanyEmailAddress , "", new { @class = "text-danger" })
                                </td>
                                <td>
                                    <button id='btndummy-@i' type="button" class="btn btn-sm invisible">Dummy</button>

                                    <button id='btnadd-@i' type="button" class="btn btn-sm btn-secondary visible" onclick="AddItem(this)"
                                            style="left:90%;position:absolute;">
                                        Add
                                    </button>
                                    <button id='btnremove-@i' type="button" class="btn btn-sm btn-danger invisible" onclick="DeleteItem(this)"
                                            style="left:90%;position:absolute;">
                                        Delete
                                    </button>
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
                <input type="hidden" id="hdnLastIndex" value="0" />
                <div class="search_form1">
                    <label asp-for="FileCV" class="control-label"></label>
                    <hr />
                    <input asp-for="FileCV">
                    <span asp-validation-for="FileCV" class="text-danger"></span>
                </div>

                <br />
                <div class="form-group">
                    <input type="submit" value="Update" class="btn btn-primary" />
                    <a type="submit" asp-action="Index" class="btn btn-dark float-right">Back To List</a>
                </div>


            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script type="text/javascript">
        $(".custom-file-input").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });



        function DeleteItem(btn) {
            $(btn).closest('tr').remove();
        }



        function AddItem(btn) {

            var table = document.getElementById('ExpTable');
            var rows = table.getElementsByTagName('tr');

            var rowOuterHtml = rows[rows.length - 1].outerHTML;

            var lastrowIdx = document.getElementById('hdnLastIndex').value;

            var nextrowIdx = eval(lastrowIdx) + 1;

            document.getElementById('hdnLastIndex').value = nextrowIdx;

            rowOuterHtml = rowOuterHtml.replaceAll('_' + lastrowIdx + '_', '_' + nextrowIdx + '_');
            rowOuterHtml = rowOuterHtml.replaceAll('[' + lastrowIdx + ']', '[' + nextrowIdx + ']');
            rowOuterHtml = rowOuterHtml.replaceAll('-' + lastrowIdx, '-' + nextrowIdx);


            var newRow = table.insertRow();
            newRow.innerHTML = rowOuterHtml;



            var btnAddID = btn.id;
            var btnDeleteid = btnAddID.replaceAll('btnadd', 'btnremove');

            var delbtn = document.getElementById(btnDeleteid);
            delbtn.classList.add("visible");
            delbtn.classList.remove("invisible");


            var addbtn = document.getElementById(btnAddID);
            addbtn.classList.remove("visible");
            addbtn.classList.add("invisible");

        }
        $(document).ready(function () {
            $('#Skills_dropdown').multiselect();
        });
        $(document).ready(function () {
            $('#Educations_dropdown').multiselect();
        });

        $(document).ready(function () {
            $('.js-example-basic-multiple').select2();
        });
    </script>
}

