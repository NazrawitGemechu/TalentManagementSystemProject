@model TalentManagement.UI.Models.ViewModels.CreateTalentViewModel
@using TalentManagement.Domain.Enum;
<div class="row">
    <div class="col-md-8 offset-2">
        <p>
            <h4>Enter Your Information</h4>
        </p>
        <div class="row">
            <div class="col-md-12 ">
                <form asp-action="Create" enctype="multipart/form-data">
                      <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                                <label asp-for="FirstName" class="control-label"></label>
                                <input asp-for="FirstName" class="form-control" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                            <div class="form-group">
                                <label asp-for="LastName" class="control-label"></label>
                                <input asp-for="LastName" class="form-control" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Gender" class="control-label"></label>
                                <select asp-for="Gender" class="form-control" asp-items="Html.GetEnumSelectList<Gender>()">
                                    <option value="" selected disabled>---Select Your Gender---</option>
                                </select>
                                <span asp-validation-for="Gender" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Email" class="control-label"></label>
                                <input asp-for="Email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="PhoneNo" class="control-label"></label>
                                <input asp-for="PhoneNo" class="form-control" />
                                <span asp-validation-for="PhoneNo" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Country" class="control-label"></label>
                                <select asp-for="Country" class="form-control" asp-items="Html.GetEnumSelectList<Country>()">
                                    <option value="" selected disabled>---Select Your Country---</option>
                                </select>
                                <span asp-validation-for="Country" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Language" class="control-label"></label>
                                <select asp-for="Language" class="form-control" asp-items="Html.GetEnumSelectList<Language>()">                                    
                                <option value="" selected disabled>---Select Language Proficency---</option>
                                </select>
                               
                                <span asp-validation-for="Language" class="text-danger"></span>
                            </div>
                    </div>
                     <div class="col-md-6">
                         
                            <div class="form-group">
                                <label asp-for="SelectedSkills" class="control-label"></label>
                                <select asp-for="SelectedSkills" class="form-control" asp-items="Model.Skills">
                                    <option value="" selected disabled>---Select Your Skill(s)---</option>
                                </select>
                                <span asp-validation-for="SelectedSkills" class="text-danger"></span>
                            </div>
                             <div class="form-group">
                                <label asp-for="SelectedEducation" class="control-label"></label>
                                <select asp-for="SelectedEducation" class="form-control" asp-items="Model.EducationLevels">
                                    <option value="" selected disabled>---Select Your Education Level(s)---</option>
                                </select>
                                <span asp-validation-for="SelectedEducation" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <div class="custom-file">
                                    <label class="control-label">Upload CV</label>
                                    <input asp-for="FileCV" class="form-control custom-file-input" />
                                    <span asp-validation-for="FileCV" class="text-danger"></span>
                                </div>
                            </div>

                     </div>
                        <div class="col-md-12 form-group">
                            <h3>Previous Work Experience</h3>
                            <table id='ExpTable' class="table">
                                <thead>
                                    <tr>
                                        <th>
                                            Company Name
                                        </th>
                                        <th>
                                            Role
                                        </th>
                                        <th>
                                            Number Of Years
                                        </th>
                                        <th>
                                            Company Email Address

                                        </th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @*@foreach(var item in Model.Experiences)*@
                                    @for (int i = 0; i < Model.TalentExperiences.Count; i++)
                                    {
                                        <tr>
                                            <td>
                                                @*<input asp-for="@item.CompanyName" class="form-control"/>*@
                                                @Html.EditorFor(x=>x.TalentExperiences[i].CompanyName, new {htmlAttributes=new {@class="form-control"}})
                                                @Html.ValidationMessageFor(x=>x.TalentExperiences[i].CompanyName, "", new { @class = "text-danger" })
                                            </td>
                                            <td>
                                                @*<input asp-for="@item.Designation" class="form-control" />*@
                                                @Html.EditorFor(x=>x.TalentExperiences[i].Role, new {htmlAttributes=new {@class="form-control"}})
                                                @Html.ValidationMessageFor(x=>x.TalentExperiences[i].Role, "", new { @class = "text-danger" })
                                            </td>
                                            <td>
                                               
                                                @Html.EditorFor(x=>x.TalentExperiences[i].NumberOfYears, new {htmlAttributes=new {@class="form-control"}})
                                                @Html.ValidationMessageFor(x=>x.TalentExperiences[i].NumberOfYears, "", new { @class = "text-danger" })
                                            </td>
                                            <td>
                                               
                                                @Html.EditorFor(x=>x.TalentExperiences[i].CompanyEmailAddress, new {htmlAttributes=new {@class="form-control"}})
                                                @Html.ValidationMessageFor(x=>x.TalentExperiences[i].CompanyEmailAddress , "", new { @class = "text-danger" })
                                            </td>
                                            <td>
                                                <button id='btndummy-@i' type="button" class="btn btn-sm invisible">Dummy</button>

                                                <button id='btnadd-@i' type="button" class="btn btn-sm btn-secondary visible" onclick="AddItem(this)"
                                                        style="left:90%;position:absolute;">
                                                    Add
                                                </button>
                                                <button id='btnremove-@i' type="button" class="btn btn-sm btn-danger invisible" onclick="DeleteItem(this)"
                                                        style="left:90%;position:absolute;">
                                                    Delete
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <input type="hidden" id="hdnLastIndex" value="0" />

                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </div>
                  </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }


    <script type="text/javascript">
        $(".custom-file-input").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);

        });

        function DeleteItem(btn) {
            $(btn).closest('tr').remove();
        }

        function AddItem(btn) {
            var table = document.getElementById('ExpTable');
            var rows = table.getElementsByTagName('tr');
            var rowOuterHtml = rows[rows.length - 1].outerHTML;

            var lastrowIdx = document.getElementById('hdnLastIndex').value;

            var nextrowIdx = eval(lastrowIdx) + 1;
            document.getElementById('hdnLastIndex').ariaValueMax = nextrowIdx;

            rowOuterHtml = rowOuterHtml.replaceAll('_' + lastrowIdx + '_', '_' + nextrowIdx + '_');
            rowOuterHtml = rowOuterHtml.replaceAll('[' + lastrowIdx + ']', '[' + nextrowIdx + ']');
            rowOuterHtml = rowOuterHtml.replaceAll('-' + lastrowIdx, '-' + nextrowIdx);

            var newRow = table.insertRow();
            newRow.innerHTML = rowOuterHtml;

            var btnAddID = btn.id;
            var btnDeleteid = btnAddID.replaceAll('btnadd', 'btnremove');

            var delbtn = document.getElementById(btnDeleteid);
            delbtn.classList.add("visible");
            delbtn.classList.remove("invisible");


            var addbtn = document.getElementById(btnAddID);
            addbtn.classList.remove("visible");
            addbtn.classList.add("invisible");

        }




    </script>


}
