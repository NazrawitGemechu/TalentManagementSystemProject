@model IEnumerable<TalentManagement.Domain.Entities.Talent>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}
<div class="container-xxl py-5">
    <div class="container">
        <h1 class="text-center mb-5 wow fadeInUp" data-wow-delay="0.1s">Talents</h1>
        <div id="tab-1" class="tab-pane fade show p-0 active">

            @foreach (var item in Model)
            {
                <div class="job-item p-4 mb-4">
                    <div class="row g-4">

                        <div class="col-sm-12 col-md-8 d-flex align-items-center">

                            <div class="text-start ps-4">
                                <h5 class="mb-3">

                                    @Html.DisplayFor(modelItem => item.FirstName)
                                    @Html.DisplayFor(modelItem => item.LastName)


                                </h5>
                                <p class="my-2"> @Html.DisplayFor(modelItem => item.Email)</p>
                                <span class="text-truncate me-3"><i class="fa fa-map-marker-alt text-primary me-2"></i>@Html.DisplayFor(modelItem => item.Country)</span>

                            </div>
                        </div>
                        <div class="col-sm-12 col-md-4 d-flex flex-column align-items-start align-items-md-end justify-content-center">
                            <div class="d-flex mb-3">

                                <a class="btn btn-primary" asp-controller="Talent" asp-action="Detail" asp-route-id="@item.Id">Details</a>

                            </div>

                        </div>

                    </div>
                </div>
            }
        </div>
    </div>
</div>