@model TalentManagement.Domain.Entities.ApplicationUser
<br />
<h1 class="d-flex justify-content-center pl-3">Edit User</h1>
<br />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit">
            <div class="container-xxl py-5">
                <div class="container">
                    <div class="text-center mb-5 wow fadeInUp" data-wow-delay="0.1s">
                        <div class="row">
                            <input asp-for="@Model.Id" hidden />
                            <div class="col-12">
                                <div class="form group row py-2">
                                    <div class="col-4">
                                        <label asp-for="Email"></label>
                                    </div>
                                    <div class="col-8">
                                        <input asp-for="Email" readonly class="form-control" />
                                    </div>
                                </div>
                                <div class="form group row py-2">
                                    <div class="col-4">
                                        <label asp-for="RoleId"></label>
                                    </div>
                                    <div class="col-8">

                                        <select asp-for="RoleId" asp-items="@Model.RoleList" class="form-select">
                                            <option disabled selected>--Select Role--</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form group row py-2">
                                    <div class="col-8 offset-4 row">

                                        <div class="col">
                                            <input type="submit" class="btn btn-outline-success  w-100" value="Update" />

                                        </div>
                                        <div class="col">
                                            <a asp-action="Index" class="btn btn-outline-dark w-100 ">Back to User</a>
                                        </div>


                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>

</div>
